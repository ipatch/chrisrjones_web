<%= form_for @article do |f| %>

  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@article.errors.count, "error") %> prohibited
        this article from being saved:
      </h2>
      <ul>
        <% @article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>

  <p>
    <%= f.label :slug %> / permalink<br>
    <%= f.text_field :slug %>
  </p>

  <p>
    <%= f.label :meta_description %><br>
    <%= f.text_field :meta_description %>
  <p>
    <p>
      <!-- set the 'user_id' when creating an article -->
      <!-- # set the user_id in the controller not the form. -->
      <!-- check if current_user is nil, and if it is, redirect -->
      <!-- check for "current_user" in articles controller -->
      <%= @article.user_id = current_user.id %><br>

    </p>
    <%= f.submit %>
  </p>
  <p>
<% end %>

